{% extends 'base.html.twig' %}

{% block title %}Quack index{% endblock %}

{% block body %}
    <h1>Les quacks</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Picture</th>
                <th>Content</th>
                <th>Author</th>
                <th>Create</th>
            </tr>
        </thead>
        <tbody>
        <a href="{{ path('duck_index') }}">Mon Profil</a>
        {% for quack in quacks %}
            {% if quack.parent == null %}
            <tr>
                <td><img src="{{ asset('upload/' ~ quack.picture) }} "></td>

                <td>{{ quack.content }}</td>
                <td>{{ quack.autor.duckname }}</td>
                <td>{{ quack.createdAt ? quack.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('quack_show', {'id': quack.id}) }}">show</a>
                    <a href="{{ path('quack_edit', {'id': quack.id}) }}">edit</a>
                </td>
            </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('quack_new') }}">Create new</a>
{% endblock %}
